<div class="container">
  <h1 class="text-center" style="margin-bottom: 40px;">Nuevo Post</h1>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= label_tag :title, "Titulo" %>
          <%= f.text_field :title, class: "form-control input-lg" %>
        </div>
        <div class="form-group">
          <%= label_tag :body,  "Cuerpo (250 cracteres mÃ­nimo)" %>
          <%= f.text_area :body, class: "form-control", rows:10 %>
        </div>
        <div>
          <%= f.submit "Crear post", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

